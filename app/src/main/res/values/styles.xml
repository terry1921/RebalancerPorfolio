<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Style for text in ListViews or RecyclerViews -->
    <style name="TextPrimary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Style for Headers & Dividers -->
    <style name="TextHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Style for Headers & Dividers -->
    <style name="TextTitle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Headers & Dividers -->
    <style name="TextTitle.Small" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Headers & Dividers -->
    <style name="TextTitle.Medium" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Headers & Dividers -->
    <style name="TextTitle.Large" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="button">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="button.orange">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/button_orange</item>
    </style>

    <style name="button1" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="android:width">@dimen/button_width</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
    </style>

    <style name="btn" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
    </style>

    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support Library compability -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>

    <style name="recycler_view">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!-- styles
    <item name="android:background">@drawable/button</item>
    -->
    <style name="dialog_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>

        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="gdev_alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="heading.title2">
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">23sp</item>
        <item name="android:lineHeight" tools:targetApi="p">32sp</item>
    </style>

    <style name="heading.title3">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
    </style>

    <style name="heading.headline">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
    </style>

    <style name="heading.sub_headline">
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
    </style>

    <style name="paragraph">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="paragraph.body1">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
    </style>

    <style name="paragraph.body2">
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
    </style>

    <style name="paragraph.body3">
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
    </style>

    <style name="paragraph.caption1">
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
    </style>

    <style name="paragraph.caption2">
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="label.link">
        <item name="android:textColor">@color/blueberry</item>
    </style>

    <style name="label.tooltip">
        <item name="android:textColor">@color/ebony_clay</item>
    </style>

    <style name="label.link.small">
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
    </style>

    <style name="label.button">
        <item name="android:textColor">@color/red_salsa</item>
    </style>

    <style name="label.button.xsmall">
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
    </style>

    <style name="label.tooltip.regular">
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
    </style>

    <style name="label.tooltip.small">
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
    </style>
</resources>