<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.RebalancedPortfolio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fun_blue</item>
        <item name="colorPrimaryVariant">@color/congress_blue</item>
        <item name="colorOnPrimary">@color/white_ice</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lynch</item>
        <item name="colorSecondaryVariant">@color/pacific_blue</item>
        <item name="colorOnSecondary">@color/ebony_clay</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Launcher" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/background_launcher</item>
        <item name="colorPrimaryDark">@color/white_ice</item>
    </style>

</resources>